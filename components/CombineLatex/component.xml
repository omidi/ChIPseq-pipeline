<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<component>
    <name>CombineLatex</name>
    <version>1</version>
    <doc>
      Combines several LaTeX fragments from LatexFragmentizer into one LaTeX document.
      Input fragments are processed in numeric order.
    </doc>
    <author email="@unibas">Severin</author>
    <category>Latex</category>
    <launcher type="python">
        <argument name="file" value="CombineLatex.py" />
    </launcher>
    <requires URL="http://www.python.org/not" type="manual">python</requires>
    <inputs>
        <input name="latex1" type="Latex" optional="true">
            <doc>LaTeX fragment 1.</doc>
        </input>
        <input name="latex2" type="Latex" optional="true">
